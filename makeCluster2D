all: images .PHONY

images: simulacion2D.c
	@echo Preparando y corriendo la simulaci√≥n:
	mkdir datFiles
	mkdir images
	gcc -std=gnu99 -o heh.a -I/usr/local/include -I/hpcfs/apps/libs/fftw/3.3.6/double/include -L/usr/local/lib/ -L/hpcfs/apps/libs/fftw/3.3.6/double/lib simulacion2D.c -Wall -lfftw3 -lm 
